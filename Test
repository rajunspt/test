blacked1 = true;
  blacked2 = false;
  blacked3 = false;
  blacked4 = false;
  blacked5 = false;
  blacked6 = false;
  title = 'store-admin-panel123';
  selectedQuarter: any = "Q1";
  selectedYear: any = 2024;
  reportId = '20220622_182309';
  assignedDate = new Date(2022, 5, 22);  // June 22, 2022
  tiles = [
    {title: 'Tile 1', content: 'Content 1'},
    {title: 'Tile 2', content: 'Content 2'},
    {title: 'Tile 3', content: 'Content 3'},
    {title: 'Tile 4', content: 'Content 4'},
    {title: 'Tile 5', content: 'Content 5'},
    {title: 'Tile 6', content: 'Content 6'},
    {title: 'Tile 7', content: 'Content 7'},
    {title: 'Tile 8', content: 'Content 8'},
  ];
  quarters = [
    { value: 'Q1', viewValue: 'Q1' },
    { value: 'Q2', viewValue: 'Q2' },
    { value: 'Q3', viewValue: 'Q3' },
    { value: 'Q4', viewValue: 'Q4' }
  ];

  years = Array.from({ length: 20 }, (_, i) => new Date().getFullYear() - i);

  open(item:any){
    this.blacked1 = false;
    this.blacked2 = false;
    this.blacked3 = false;
    this.blacked4 = false;
    this.blacked5 = false;
    this.blacked6 = false;
    if(item === 'tab1'){
      this.blacked1 = true;
    }
    if(item === 'tab2'){
      this.blacked2 = true;
    }
    if(item === 'tab3'){
      this.blacked3 = true;
    }
    if(item === 'tab4'){
      this.blacked4 = true;
    }
    if(item === 'tab5'){
      this.blacked5 = true;
    }
    if(item === 'tab6'){
      this.blacked6 = true;
    }
  }
